#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@  --with python2 --with autotools-dev --with autoreconf

override_dh_auto_test:
	dh_auto_test || echo “ignoring test failure”

override_dh_installinit:
	cp -a kolabd/kolabd.sysvinit debian/kolab-server.kolabd.init
	cp -a kolabd/kolabd.sysconfig debian/kolab-server.kolabd.default
	dh_installinit --name kolabd -R

	cp -a saslauthd/kolab-saslauthd.sysvinit debian/kolab-saslauthd.init
	cp -a saslauthd/kolab-saslauthd.sysconfig debian/kolab-saslauthd.default
	dh_installinit -R

	cp -a wallace/wallace.sysvinit debian/wallace.init
	cp -a wallace/wallace.sysconfig debian/wallace.default
	dh_installinit -R

override_dh_install:
	dh_install --list-missing

